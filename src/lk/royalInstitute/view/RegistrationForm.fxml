<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="890.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="lk.royalInstitute.controller.RegistrationFormController">
   <children>
      <Label layoutX="379.0" layoutY="14.0" text="Registration">
         <font>
            <Font name="System Bold" size="23.0"/>
         </font>
      </Label>
      <Label layoutX="325.0" layoutY="116.0" text="Registration No">
         <font>
            <Font size="13.0"/>
         </font>
      </Label>
      <Label fx:id="lblRegistrationID" layoutX="437.0" layoutY="116.0" prefWidth="60.0">
         <font>
            <Font size="13.0"/>
         </font>
      </Label>
      <JFXTextField fx:id="txtRegDate" layoutX="325.0" layoutY="154.0" prefHeight="30.0" prefWidth="300.0"
                    promptText="Registration Date"/>
      <JFXComboBox fx:id="cmbStudentID" layoutX="325.0" layoutY="206.0" onAction="#cmbStudentIDOnAction"
                   prefHeight="30.0" prefWidth="300.0" promptText="Select Student ID"/>
      <JFXTextField fx:id="txtStudentName" editable="false" layoutX="325.0" layoutY="250.0" prefHeight="30.0"
                    prefWidth="300.0" promptText="Student Name"/>
      <JFXTextField fx:id="txtStudentContact" editable="false" layoutX="325.0" layoutY="299.0" prefHeight="30.0"
                    prefWidth="300.0" promptText="Student Contact"/>
      <JFXComboBox fx:id="cmbCourseCode" layoutX="325.0" layoutY="349.0" onAction="#cmbCourseCodeOnAction"
                   prefHeight="30.0" prefWidth="300.0" promptText="Select Course Code"/>
      <JFXTextField fx:id="txtRegFee" layoutX="325.0" layoutY="403.0" prefHeight="30.0" prefWidth="300.0"
                    promptText="Registration Fee"/>
      <JFXButton layoutX="599.0" layoutY="506.0" onAction="#btnRegisterOnAction" text="Register"/>
      <JFXButton layoutX="673.0" layoutY="506.0" onAction="#btnCancelOnAction" text="Cancel"/>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="890.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="lk.royalInstitute.controller.UserAccountFormController">
    <Label alignment="CENTER" layoutX="316.0" layoutY="14.0" text="User Account Manager">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    <Label layoutX="30.0" layoutY="108.0" text="User ID">
        <font>
            <Font size="13.0"/>
        </font>
    </Label>
    <Label fx:id="lblUserID" layoutX="106.0" layoutY="108.0" prefWidth="60.0">
        <font>
            <Font size="13.0"/>
        </font>
    </Label>
    <JFXTextField fx:id="txtUserName" labelFloat="true" layoutX="31.0" layoutY="160.0" prefWidth="235.0"
                  promptText="UserName"/>
    <JFXPasswordField fx:id="pwdNewPassword" layoutX="31.0" layoutY="204.0" prefWidth="235.0"
                      promptText="New Password"/>
    <JFXPasswordField fx:id="pwdReEnterPassword" layoutX="32.0" layoutY="256.0" prefWidth="235.0"
                      promptText="ReEnter Password"/>
    <JFXButton fx:id="btnRegister" layoutX="55.0" layoutY="339.0" onAction="#btnRegisterOnAction" prefHeight="35.0"
               prefWidth="73.0" text="Register"/>
    <JFXButton fx:id="btnDelete" layoutX="171.0" layoutY="339.0" onAction="#btnDeleteOnAction" prefHeight="35.0"
               prefWidth="73.0" text="Delete"/>
    <JFXButton fx:id="btnUpdate" layoutX="115.0" layoutY="399.0" onAction="#btnUpdateOnAction" prefHeight="35.0"
               prefWidth="73.0" text="Update"/>
    <JFXButton fx:id="btnCancel" layoutX="787.0" layoutY="540.0" onAction="#btnCancelOnAction" prefHeight="35.0"
               prefWidth="73.0" text="cancel"/>
    <TableView fx:id="tblStudent" layoutX="291.0" layoutY="114.0" onMouseReleased="#tblStudentOnReleased"
               prefHeight="404.0" prefWidth="580.0">
        <columns>
            <TableColumn fx:id="colStudentID" prefWidth="75.0" text="User ID"/>
            <TableColumn fx:id="colFullName" prefWidth="250.0" text="userName"/>
            <TableColumn fx:id="colAddress" prefWidth="246.0" text="Password"/>
        </columns>
    </TableView>
</AnchorPane>
